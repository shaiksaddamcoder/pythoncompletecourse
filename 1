Introdcution - day 1

print(3 + 2)    # addition(+) 

print(3 - 2)    # subtraction(-)

print(3 * 2)    # multiplication(*)

print(3 / 2)    # division(/)

print(3 ** 3)   # exponential(**)

print(3 % 2)    # modulus (%)

print(3 // 2)   # floor divsion operator(//)

shortcuts - add,mul,mul,div,exp,mod,floor



#data types

print(type(10))            #int

print(type(3.14))          #float

print(type(1+3j))          #complex

print(type('saddamcode'))  #string

print(type([1, 2, 3]))     #list

print(type({'name':'saddamcoder'}))  #dictionary

print(type({8.2, 2.3, 3.5}))       #set

print(type(9.3, 3.4, 4.5))         #tuple

print(type(3 == 3))              #bool

print(type(3 <= 3))            #bool



#examples

#basic addition: 

#0

a=23

b=30

print(a+b)  #run #53



#1

a = int(input('enter a first number:'))

b = int(input('enter a second number:'))

c = int(input('enter a third number:'))

sum = (a+b+c)

print('sum:',sum)



#advanced addition:

#adding lists 


list1 = [1, 2, 3]

list2 = [4, 5, 6]

combined_list = list1 +  list2

print(combined_list)           #[1, 2, 3, 4, 5, 6]



#adding strings

first_name = "shaik"

last_name = "saddamcoder"

full_name = first_name + " " + last_name

print(full_name)              op : shaik saddamcoder

#note:   #  " " -this is used for space generation between

        #   you can add numbers,lists,strings




#basic subtraction :

#0

